Grammar ->
  | Nonterminal
  | Grammar HardSpace Nonterminal

HardSpace : SpaceRest

Space :
      | SpaceRest

SpaceRest
  : SpaceChar
  | SpaceRest SpaceChar

SpaceChar
  : ' '
  | '\n'
  | '\t'

Nonterminal -> Name Space RuleSeparator Rules OptSemi

RuleSeparator : '-' '>' | ':'

OptSemi :
        | ';'

Rules : Rule
      | Rules Space '|' Rule

Rule
  :
  | Productions
  | Productions Action

Productions
  : Production
  | Productions HardSpace Production

Action -> Space '#' Name HardSpace Numbers

Literal
  : "'" Char "'"
  | '[' Range ']'
  | '"' Chars '"'

Name -> Space NameStart | Space NameStart NameRest

NameStart
  : '_'
  | [a-z]
  | [A-Z]

NameRest
  : NameChar
  | NameRest NameChar

NameChar
  : NameStart
  | [0-9]

Ranges ->
    Range
  | Ranges Range

Range : [a-z] '-' [a-z]
      | [A-Z] '-' [A-Z]
      | [0-9] '-' [0-9]

Chars -> Char | Chars Char

Char
  : [a-z]
  | [A-Z]
  | [0-9]
  | '\' 't'
  | '\' 'n'
  | ' '
  | '['
  | ']'
  | '"'

Numbers -> Space Number | Numbers HardSpace Number

Number -> Digit | Number Digit

Digit -> [0-9]
